@model CMS.Entities.ODZUser

@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>
<script src="~/Scripts/loginUser.js"></script>
<body>
    <div id="Login">
        <div class="row">
            <div class="col-md-6">
                <div class="loginform">

                    @using (Html.BeginForm("Index", "ODZ", FormMethod.Post, new { @id = "formId", @onsubmit = "return userValid()" }))
                    {
                        @*@Html.HiddenFor(model => model.FirstName);
                @Html.HiddenFor(model => model.LastName);*@
                        @*<div class="form-horizontal" style="background-color:lightpink;padding-left:80px;width:400px"></div>*@
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
                                    <div> <font id="mail" color="red"></font></div>
                                </div>
                               
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    <div><font id="pass" color="red"></font></div>

                                </div>
                               
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input style="border-radius:6px;width:70px" type="submit" value="Login" class="btn btn-default" />
                                    <input style="border-radius:6px;width:70px" type="reset" value="Clear" class="btn btn-default" />

                                </div>
                            </div>

                        </div>
                    }
                </div>

            </div>

        </div>
    </div>
</body>